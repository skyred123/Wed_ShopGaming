@model IEnumerable<Wed_ShopGaming.Models.Entity.HoaDon>
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Ngay Thanh Toan</th>
                        <th>Tình Trạng Thanh Toán</th>
                        <th>Hình Thức Thanh Toán</th>
                        <th>Tổng Thanh Toán</th>
                        <th>Tình Trạng Đơn Hàng</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle"><p>@item.DateTime</p></td>
                            <td class="align-middle"><p>@item.Status</p></td>
                            <td class="align-middle"><p>@item.Payments</p></td>
                            <td class="align-middle"><p>@String.Format("{0:0,0}", item.Price)đ</p></td>
                            <th class="align-middle"><p>@item.OrderStatus</p></th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

