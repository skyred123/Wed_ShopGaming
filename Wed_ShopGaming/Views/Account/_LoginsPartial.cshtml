@using Microsoft.Owin.Security
<div class="login-other row mt-4">
    @{
        var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
        if (loginProviders.Count() != 0)
        {
            <div class="col-6">
                <a class="fb-login" href="~/Account/ExternalLogin/?provider=@("Facebook")&&returnUrl=@((string)ViewBag.ReturnUrl)">Facebook <i class="fa fa-facebook"></i></a>
            </div>
            <div class="col-6">
                <a class="google-login" href="~/Account/ExternalLogin/?provider=@("Google")&&returnUrl=@((string)ViewBag.ReturnUrl)">Google <i class="fa fa-google"></i></a>
            </div>
        }
    }

</div>
