
@using Microsoft.AspNet.Identity
<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>srtdash - Starter Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="~/Contents_Custom/assets/images/icon/favicon.ico">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/metisMenu.css">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/slicknav.min.css">
    <!-- amchart css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <!-- others css -->
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/typography.css">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/default-css.css">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/styles.css">
    <link rel="stylesheet" href="~/Contents_Custom/assets/css/responsive.css">
    <!-- modernizr css -->
    <script src="~/Contents_Custom/assets/js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- page container area start -->
    <div class="page-container">
        <!-- sidebar menu area start -->
        <div class="sidebar-menu">
            <div class="sidebar-header">
                <div class="logo">
                    <a href="#"><img src="~/Contents_Custom/assets/images/icon/logo.png" alt="logo"></a>
                </div>
            </div>
            <div class="main-menu">
                <div class="menu-inner">
                    <nav>
                        <ul class="metismenu" id="menu">
                            <li><a href="@Url.Action( "Index", "Account", new { area = "Admin" })"><i class="ti-user"></i><span>Danh Sách Người Dùng</span></a></li>
                            <li class="">
                                <a href="javascript:void(0)" aria-expanded="true"><i class="ti-desktop"></i><span>Máy Tính</span></a>
                                <ul class="collapse">
                                    <li><a href=" @Url.Action( "MayTinh", "MayTinh", new { area = "Admin" })">Máy Tính</a></li>
                                    <li><a href=" @Url.Action( "LoaiMT", "QlSanPham", new { area = "Admin" })">Loại Máy Tính</a></li>
                                    <li><a href=" @Url.Action( "CauHinhSP", "QlSanPham", new { area = "Admin" })">Cấu Hình</a></li>
                                </ul>
                            </li>
                            <li class="">
                                <a href="javascript:void(0)" aria-expanded="true"><i class="ti-desktop"></i><span>Linh Kiện</span></a>
                                <ul class="collapse">
                                    <li><a href=" @Url.Action( "LinhKien", "LinhKien", new { area = "Admin" })">Linh Kiện</a></li>
                                    <li><a href=" @Url.Action( "LoaiLK", "QlSanPham", new { area = "Admin" })">Loại Linh Kiện</a></li>
                                    <li><a href=" @Url.Action( "TSKTSP", "QlSanPham", new { area = "Admin" })">Thông Số Linh Kiện</a></li>
                                </ul>
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                        <a href="" class="dropdown-toggle nav-item nav-link" data-toggle="dropdown">Quan ly san pham<span class=""></span></a>
                                        <ul class="dropdown-menu bg-dark">
                                            <li>
                                                @Html.ActionLink("Loai May Tinh", "LoaiMT", "QlSanPham", new { area = "Admin" }, htmlAttributes: new { @class = "nav-item nav-link " })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Loai San Pham", "LoaiLK", "QlSanPham", new { area = "Admin" }, htmlAttributes: new { @class = "nav-item nav-link " })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Hang", "HangSP", "QlSanPham", new { area = "Admin" }, htmlAttributes: new { @class = "nav-item nav-link " })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Cau Hinh", "CauHinhSP", "QlSanPham", new { area = "Admin" }, htmlAttributes: new { @class = "nav-item nav-link " })
                                            </li>
                                            <li>
                                                @Html.ActionLink("Thong So Ky Thuat", "TSKTSP", "QlSanPham", new { area = "Admin" }, htmlAttributes: new { @class = "nav-item nav-link " })
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                                <a href="" class="btn px-0">
                                    <i class="fas fa-heart text-primary"></i>
                                    <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">0</span>
                                </a>
                                <a href="~/Shop/ShoppingCart" class="btn px-0 ml-3">
                                    <i class="fas fa-shopping-cart text-primary"></i>
                                    <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">0</span>
                                </a>
                            </div>
                            <div class="btn-group ml-3">
                                @if (Request.IsAuthenticated)
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="" class="dropdown-toggle nav-item nav-link text-light" data-toggle="dropdown">My Account<span class=""></span></a>
                                    <div class="dropdown-menu dropdown-menu-right text-light">
                                        @Html.Label("Hello " + User.Identity.GetUserName() + "!", htmlAttributes: new { @class = "d-flex text-light" })
                                        <a href="~/Account/Logout" class="text-light">Log Out</a>
                                    </div>
                                }
                                else
                                {
                                    <a href="" class="dropdown-toggle nav-item nav-link text-light" data-toggle="dropdown">My Account<span class=""></span></a>
                                    <div class="dropdown-menu dropdown-menu-right bg-dark">
                                        <a href="~/Account/Register" class="d-flex text-light">Register</a>
                                        <a href="~/Account/Login" class="text-light">Log in</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- offset area end -->
    <!-- jquery latest version -->
    <script src="~/Contents_Custom/assets/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="~/Contents_Custom/assets/js/popper.min.js"></script>
    <script src="~/Contents_Custom/assets/js/bootstrap.min.js"></script>
    <script src="~/Contents_Custom/assets/js/owl.carousel.min.js"></script>
    <script src="~/Contents_Custom/assets/js/metisMenu.min.js"></script>
    <script src="~/Contents_Custom/assets/js/jquery.slimscroll.min.js"></script>
    <script src="~/Contents_Custom/assets/js/jquery.slicknav.min.js"></script>

    <!-- start chart js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
    <!-- start highcharts js -->
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <!-- start zingchart js -->
    <script src="https://cdn.zingchart.com/zingchart.min.js"></script>
    <script>
        zingchart.MODULESDIR = "https://cdn.zingchart.com/modules/";
        ZC.LICENSE = ["569d52cefae586f634c54f86dc99e6a9", "ee6b7db5b51705a13dc2339db3edaf6d"];</script>
    <!-- all line chart activation -->
    <script src="~/Contents_Custom/assets/js/line-chart.js"></script>
    <!-- all pie chart -->
    <script src="~/Contents_Custom/assets/js/pie-chart.js"></script>
    <!-- others plugins -->
    <script src="~/Contents_Custom/assets/js/plugins.js"></script>
    <script src="~/Contents_Custom/assets/js/scripts.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>


