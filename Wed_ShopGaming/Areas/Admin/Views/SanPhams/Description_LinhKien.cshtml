@model Wed_ShopGaming.ViewModels.ListDescription_LinhKienViewModel
@{
    ViewBag.Title = "Description_LinhKien";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Wed_ShopGaming.Models.Entity.SanPham SP = ViewBag.SanPham_Description;
}
@Html.AntiForgeryToken()
<div class="row p-2">
    <table class="table">
        <tr>
            <th>
                @Html.Label("Ten")
            </th>
            <th>
                @Html.Label("So luong")
            </th>
            <th>
                @Html.Label("Gia")
            </th>
            <th>
                @Html.Label("hang")
            </th>
            <th>
                @Html.Label("Loai")
            </th>
        </tr>
        <tr>
            <td>
                @Html.Label(SP.Name)
            </td>
            <td>
                @Html.Label(SP.Amount.ToString())
            </td>
            <td>
                @Html.Label(SP.Price.ToString())
            </td>
            <td>
                @Html.Label(SP.Hang.Name)
            </td>
            <td>
                @Html.Label(SP.LinhKien.LoaiSP.Name)
            </td>
        </tr>
    </table>
    <br />
    <table class="table">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @using (Html.BeginForm("Description_LinhKien", "SanPhams", new { area = "Admin" }, FormMethod.Post))
        {

            for (int i = 0; i < Model.description_LinhKiens.Count(); i++)
            {
                <tr>
                    <td>

                        @Html.CheckBoxFor(m => m.description_LinhKiens[i].IsCheck)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.description_LinhKiens[i].Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.description_LinhKiens[i].Description)
                    </td>
                </tr>
            }
            <input type="submit" value="submit" class="btn btn-primary"/>
        }
    </table>
</div>













